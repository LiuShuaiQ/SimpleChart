<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PanelView">
        <attr name="maxPercent" format="float"/>
        <attr name="selectPercent" format="float"/>
        <attr name="arcColor" format="color"/>
        <attr name="arcWidth" format="dimension"/>
        <attr name="android:text"/>
        <attr name="tikeCount" format="integer"/>
        <attr name="pointerColor" format="color"/>
        <attr name="pointerRadius" format="dimension"/>
        <attr name="android:textSize"/>
    </declare-styleable>
    <declare-styleable name="MyChartView">
        <!--柱子颜色-->
        <attr name="rectColor" format="color"></attr>
        <!--柱子宽度-->
        <attr name="rectWidth" format="dimension"></attr>
        <!--X轴文字大小-->
        <attr name="xTextSize" format="dimension"></attr>
        <!--Y轴文字的大小-->
        <attr name="yTextSize" format="dimension"></attr>
        <!--背景线颜色-->
        <attr name="backLineColor" format="color"></attr>
        <!--X轴是否显示-->
        <attr name="xEnable" format="boolean"></attr>
        <!--Y轴是否显示-->
        <attr name="yEnable" format="boolean"></attr>
        <!--坐标轴的颜色-->
        <attr name="axisColor" format="color"></attr>
        <!--背景线是否显示-->
        <attr name="backLineEnable" format="boolean"></attr>
        <!--坐标轴文字的颜色-->
        <attr name="axisTextColor" format="color"></attr>
        <!--y轴单位颜色-->
        <attr name="unitText" format="string"></attr>
        <!--第一个柱子颜色-->
        <attr name="firstRectColor" format="color"></attr>
        <!--第二个柱子颜色-->
        <attr name="secondRectColor" format="color"></attr>
        <!--折线颜色-->
        <attr name="lineColor" format="color"></attr>
        <!--标注的文字大小-->
        <attr name="labelTextSize" format="dimension"></attr>
        <!--标注的文字颜色-->
        <attr name="labelTextColor" format="color"></attr>
        <!--图表中间的文字内容-->
        <attr name="centerText" format="string"></attr>
        <!--图表中间文字的大小-->
        <attr name="centerTextSize" format="dimension"></attr>
        <!--图表中间文字的颜色-->
        <attr name="centerTextColor" format="color"></attr>
    </declare-styleable>

</resources>